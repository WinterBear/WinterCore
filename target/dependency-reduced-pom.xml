          <artifactId>bungeecord-chat</artifactId>
          <groupId>net.md-5</groupId>
        </exclusion>
        <exclusion>
          <artifactId>snakeyaml</artifactId>
          <groupId>org.yaml</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>me.lorinth</groupId>
      <artifactId>rpgmobs</artifactId>
      <version>1.8.7</version>
      <scope>system</scope>
      <systemPath>I:\Projects\Minecraft Projects\Spigot\WonderHaul/libs/LorinthsRpgMobs-1.8.7.jar</systemPath>
      <optional>true</optional>
    </dependency>
    <dependency>
      <groupId>com.gmail.filoghost.holographicdisplays</groupId>
      <artifactId>holographicdisplays</artifactId>
      <version>2.4.5</version>
      <scope>system</scope>
      <systemPath>I:\Projects\Minecraft Projects\Spigot\WonderHaul/libs/HolographicDisplays-2.4.5-SNAPSHOT.jar</systemPath>
      <optional>true</optional>
    </dependency>
    <dependency>
      <groupId>commons-collections</groupId>
      <artifactId>commons-collections</artifactId>
      <version>3.2.2</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.mojang</groupId>
      <artifactId>authlib</artifactId>
      <version>1.5.21</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
